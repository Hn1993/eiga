<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/light_blue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_actionbar_height">
        <RelativeLayout
            android:id="@+id/sales_title_back"
            android:layout_width="@dimen/base_actionbar_height"
            android:layout_height="@dimen/base_actionbar_height">
            <ImageView
                android:layout_marginLeft="60px"
                android:layout_centerVertical="true"
                android:background="@mipmap/white_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/sales_title_tv"
            android:layout_centerInParent="true"
            android:textSize="55px"
            android:text=""
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/sales_title_notice"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/base_actionbar_height"
            android:layout_height="@dimen/base_actionbar_height">
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="60px"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>