<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/base_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_actionbar_height">
        <include layout="@layout/layout_common_title"/>
        <ImageView
            android:id="@+id/sales_main_setting"
            android:background="@mipmap/icon_setting"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="400px">

        <ImageView
            android:scaleType="fitXY"
            android:layout_marginRight="120px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_default_head"
            android:layout_width="200px"
            android:layout_height="200px" />

        <TextView
            android:layout_marginLeft="100px"
            android:layout_marginTop="120px"
            android:textColor="@color/common_title_text_color"
            android:text="金融少年"
            style="@style/text_50px" />

        <TextView
            android:layout_marginLeft="100px"
            android:layout_marginBottom="120px"
            android:layout_alignParentBottom="true"
            android:textColor="@color/common_title_text_color"
            android:text="义乌经销商"
            android:drawablePadding="20px"
            android:drawableLeft="@mipmap/icon_location"
            style="@style/text_50px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sales_main_work"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:paddingLeft="45px"
        android:paddingRight="45px"
        android:background="@color/white"
        android:layout_marginTop="50px"
        android:layout_width="match_parent"
        android:layout_height="180px">
        <TextView
            android:drawablePadding="30px"
            android:drawableLeft="@mipmap/icon_sales_work"
            android:layout_centerVertical="true"
            android:textColor="@color/common_title_text_color"
            android:text="工作任务"
            style="@style/text_50px" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_right_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sales_main_car_work"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:paddingLeft="45px"
        android:paddingRight="45px"
        android:background="@color/white"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="180px">
        <TextView
            android:drawablePadding="30px"
            android:drawableLeft="@mipmap/icon_sales_car"
            android:layout_centerVertical="true"
            android:textColor="@color/common_title_text_color"
            android:text="汽车贷款"
            style="@style/text_50px" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_right_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sales_main_car_client"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:paddingLeft="45px"
        android:paddingRight="45px"
        android:background="@color/white"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="180px">
        <TextView
            android:drawablePadding="30px"
            android:drawableLeft="@mipmap/icon_sales_client"
            android:layout_centerVertical="true"
            android:textColor="@color/common_title_text_color"
            android:text="客户管理"
            style="@style/text_50px" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_right_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/sales_main_changeId"
        android:text="退出登录"
        android:layout_marginTop="130px"
        android:layout_gravity="center_horizontal"
        style="@style/tv_button" />

</LinearLayout>