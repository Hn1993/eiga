<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/base_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_common_title"/>
    <ImageView
        android:scaleType="fitXY"
        android:background="@mipmap/icon_phone_verify"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140px"
        android:layout_width="360px"
        android:layout_height="360px" />
    <EditText
        android:textColor="@color/common_title_text_color"
        android:textSize="40px"
        android:id="@+id/phone_verify_phone"
        android:layout_marginLeft="110px"
        android:layout_marginRight="110px"
        android:layout_marginTop="140px"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:textColorHint="@color/base_text_color"
        android:layout_width="match_parent"
        android:layout_height="125px" />
    <EditText
        android:visibility="gone"
        android:textColor="@color/common_title_text_color"
        android:textSize="40px"
        android:id="@+id/phone_verify_type"
        android:layout_marginLeft="110px"
        android:layout_marginRight="110px"
        android:layout_marginTop="20px"
        android:hint="请输入运营商类型(例：中国移动)"
        android:textColorHint="@color/base_text_color"
        android:layout_width="match_parent"
        android:layout_height="125px" />
    <RelativeLayout
        android:id="@+id/phone_verify_protocol"
        android:layout_marginLeft="110px"
        android:layout_marginRight="100px"
        android:layout_marginTop="40px"
        android:layout_width="match_parent"
        android:layout_height="110px">
        <CheckBox
            android:id="@+id/phone_verify_checkbox"
            android:button="@drawable/check_box_selector"
            android:checked="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/common_title_text_color"
            android:textSize="35px"
            android:text="同意 &lt;运营商协议&gt;"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/phone_verify_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <TextView
        android:id="@+id/phone_verify_commit"
        android:text="立即上传"
        android:layout_marginLeft="0px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        android:layout_marginBottom="60px"
        style="@style/tv_next" />
    <TextView
        android:textSize="45px"
        android:layout_marginLeft="60px"
        android:textColor="@color/common_title_text_color"
        android:text="温馨提示:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="20px"
        android:textSize="35px"
        android:layout_marginLeft="60px"
        android:textColor="@color/common_title_text_color"
        android:text="1.请输入本人实名认证的手机号码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10px"
        android:textSize="35px"
        android:layout_marginLeft="60px"
        android:textColor="@color/common_title_text_color"
        android:text="2.认证成功后将会提升贷款额度"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10px"
        android:textSize="35px"
        android:layout_marginLeft="60px"
        android:textColor="@color/common_title_text_color"
        android:text="3.咖喱车贷为您严格加密隐私信息,保障用户信息安全"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>