<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/base_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/sales_common_title"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sales_up_contract_rv"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/sales_up_contract_add"
        android:background="@color/white"
        android:layout_marginLeft="60px"
        android:layout_width="270px"
        android:layout_height="270px">
        <ImageView
            android:layout_centerInParent="true"
            android:background="@mipmap/icon_upload_contract_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginTop="60px"
        android:background="@color/color_99"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:layout_marginTop="60px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/sales_up_contract_cb"
            android:layout_marginLeft="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/check_box_selector"/>
        <TextView
            android:id="@+id/sales_up_contract_tv"
            android:layout_toRightOf="@+id/sales_up_contract_cb"
            android:layout_marginLeft="30px"
            android:textColor="@color/color_99"
            style="@style/text_40px"
            android:text="贷款金额为10万以上的客户资料"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/sales_up_contract_commit"
        android:text="提交"
        android:layout_marginTop="160px"
        android:layout_gravity="center_horizontal"
        style="@style/tv_button"/>
</LinearLayout>