<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginBottom="5px"
        android:background="@drawable/sales_choose_car_selector"
        android:id="@+id/choose_car_brand_item_layout"
        android:layout_width="match_parent"
        android:layout_height="185px">
        <ImageView
            android:id="@+id/choose_car_brand_item_image"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/choose_car_brand_item_line"
            android:background="@mipmap/ligit_blue_v_line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>