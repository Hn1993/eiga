<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/base_bg"
    android:layout_height="match_parent">

    <include layout="@layout/layout_common_title"/>
    
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="45px"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <TextView
            android:textColor="@color/color_66"
            android:layout_marginLeft="45px"
            android:layout_centerVertical="true"
            android:text="车价"
            style="@style/text_45px"/>

            <EditText
                android:id="@+id/loan_calculator_car_money"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入车价"
                android:textSize="45px"
                android:inputType="numberDecimal"
                android:textColorHint="@color/color_66"
                android:textColor="@color/color_33"
                android:layout_marginLeft="350px"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="20px"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120px">
        <TextView
            android:textColor="@color/color_66"
            android:layout_marginLeft="45px"
            android:layout_centerVertical="true"
            android:text="贷款期数"
            style="@style/text_45px"/>

        <CheckBox
            android:id="@+id/loan_calculator_cb_24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="350px"
            android:button="@drawable/car_check_box_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@+id/loan_calculator_cb_24"
            android:layout_marginLeft="30px"
            android:layout_centerVertical="true"
            android:textColor="@color/color_33"
            android:text="24期"
            style="@style/text_45px" />


        <CheckBox
            android:layout_toRightOf="@+id/loan_calculator_cb_24"
            android:id="@+id/loan_calculator_cb_36"
            android:layout_centerVertical="true"
            android:layout_marginLeft="240px"
            android:button="@drawable/car_check_box_selector"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@+id/loan_calculator_cb_36"
            android:layout_marginLeft="30px"
            android:layout_centerVertical="true"
            android:textColor="@color/color_33"
            android:text="36期"
            style="@style/text_45px" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="20px"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <TextView
            android:textColor="@color/color_66"
            android:layout_marginLeft="45px"
            android:layout_centerVertical="true"
            android:text="首付"
            style="@style/text_45px"/>

        <TextView
            android:id="@+id/loan_calculator_first_money"
            android:gravity="center_vertical"
            android:textSize="45px"
            android:text=""
            android:textColor="@color/color_33"
            android:layout_marginLeft="350px"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="20px"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <TextView
            android:textColor="@color/color_66"
            android:layout_marginLeft="45px"
            android:layout_centerVertical="true"
            android:text="月供"
            style="@style/text_45px"/>

        <TextView
            android:id="@+id/loan_calculator_month_money"
            android:gravity="center_vertical"
            android:textSize="45px"
            android:text=""
            android:textColor="@color/color_33"
            android:layout_marginLeft="350px"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/loan_calculator_ok"
        android:text="确认申请"
        android:layout_marginTop="150px"
        android:layout_gravity="center_horizontal"
        android:layout_height="110px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="60px"
        android:background="@color/light_blue"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/loan_calculator_cancel"
        android:text="取消申请"
        android:textColor="@color/color_66"
        android:layout_marginTop="50px"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:layout_height="110px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:gravity="center"
        android:textSize="60px"
        android:layout_width="match_parent"/>
</LinearLayout>