<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/mall_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@mipmap/icon_product_bg"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/mall_item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:background="@color/white"
            android:layout_weight="1">
            <TextView
                android:id="@+id/mall_item_tv"
                android:text="新车分期"
                android:textColor="@color/white"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                android:paddingTop="15px"
                android:paddingBottom="15px"
                android:background="@drawable/button_selector_radius_2px"
                style="@style/text_45px"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>