<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_actionbar_height">
    <RelativeLayout
        android:id="@+id/common_title_back"
        android:layout_width="@dimen/base_actionbar_height"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginLeft="75px"
            android:layout_centerVertical="true"
            android:background="@mipmap/common_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/common_title_tv"
        style="@style/text_45px"
        android:textColor="@color/common_title_text_color"/>
</RelativeLayout>