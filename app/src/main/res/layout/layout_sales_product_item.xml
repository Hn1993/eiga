<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="240px">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px">
        <View
            android:id="@+id/view_line"
            android:background="@color/color_dd"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <ImageView
            android:id="@+id/sales_product_item_image"
            android:layout_marginLeft="60px"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sales_product_item_status"
            android:layout_alignParentRight="true"
            android:layout_marginRight="200px"
            android:text="推荐"
            android:textColor="@color/light_blue"
            android:layout_marginLeft="60px"
            style="@style/text_40px" />
    </RelativeLayout>

    <CheckBox
        android:id="@+id/sales_product_item_cb"
        android:button="@drawable/check_box_selector"
        android:layout_marginRight="60px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="120px">


        <TextView
            android:id="@+id/sales_product_item_name"
            android:text="最高可贷:20000"
            android:textColor="@color/common_title_text_color"
            android:layout_marginLeft="60px"
            style="@style/text_40px" />

        <TextView
            android:id="@+id/sales_product_item_money"
            android:layout_toRightOf="@+id/sales_product_item_name"
            android:text="推荐"
            android:textColor="@color/color_99"
            android:layout_marginLeft="60px"
            style="@style/text_40px" />
    </RelativeLayout>
</RelativeLayout>