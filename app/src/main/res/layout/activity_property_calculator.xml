<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/base_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_common_title"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="45px"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <TextView
            android:textColor="@color/color_66"
            android:layout_marginLeft="45px"
            android:layout_centerVertical="true"
            android:text="房产价值"
            style="@style/text_45px"/>

        <EditText
            android:id="@+id/property_calculator_property_money"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入房产价值"
            android:textSize="45px"
            android:inputType="numberDecimal"
            android:textColorHint="@color/color_66"
            android:textColor="@color/color_33"
            android:layout_marginLeft="350px"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="20px"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120px">
        <TextView
            android:textColor="@color/color_66"
            android:layout_marginLeft="45px"
            android:layout_centerVertical="true"
            android:text="贷款期数"
            style="@style/text_45px"/>

        <CheckBox
            android:id="@+id/property_calculator_cb_6"
            android:layout_centerVertical="true"
            android:layout_marginLeft="350px"
            android:button="@drawable/car_check_box_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@+id/property_calculator_cb_6"
            android:layout_marginLeft="30px"
            android:layout_centerVertical="true"
            android:textColor="@color/color_33"
            android:text="6期"
            style="@style/text_45px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/text_45px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45px"
            android:text="保证金"
            android:textColor="@color/color_66" />

        <TextView
            android:id="@+id/property_calculator_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="350px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/color_33"
            android:textSize="45px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/text_45px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45px"
            android:text="月利息"
            android:textColor="@color/color_66" />

        <TextView
            android:id="@+id/property_calculator_month_interest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="350px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/color_33"
            android:textSize="45px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/loan_calculator_ok"
        android:text="确认申请"
        android:layout_marginTop="150px"
        android:layout_gravity="center_horizontal"
        android:layout_height="110px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="60px"
        android:background="@color/light_blue"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/loan_calculator_cancel"
        android:text="取消申请"
        android:textColor="@color/color_66"
        android:layout_marginTop="50px"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:layout_height="110px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:gravity="center"
        android:textSize="60px"
        android:layout_width="match_parent"/>

    <TextView
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="160px"
        android:textColor="@color/color_33"
        android:gravity="center"
        android:textSize="40px"
        android:text="* 房易贷还款方式默认为先息后本."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px"
        android:textColor="@color/color_33"
        android:gravity="center"
        android:textSize="40px"
        android:text="* 保证金比例默认为 5 %."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px"
        android:textColor="@color/color_33"
        android:gravity="center"
        android:textSize="40px"
        android:text="* 利息为每天万分之五."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px"
        android:textColor="@color/color_33"
        android:gravity="center"
        android:textSize="40px"
        android:text="* 以上信息仅供参考,具体以业务员签约为准."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>