<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/base_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_common_title"/>

        <RelativeLayout
            android:id="@+id/my_setting"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/base_actionbar_height"
            android:layout_height="@dimen/base_actionbar_height">
            <ImageView
                android:background="@mipmap/icon_setting"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="600px">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/my_head"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100px"
            android:background="@mipmap/icon_default_head"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <RelativeLayout
            android:paddingTop="25px"
            android:paddingBottom="25px"
            android:layout_marginLeft="180px"
            android:layout_toRightOf="@+id/my_head"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="350px">
            <TextView
                android:id="@+id/my_name"
                android:textColor="@color/common_title_text_color"
                android:text="金融少年"
                android:gravity="bottom"
                android:layout_height="85px"
                style="@style/text_50px" />
            <TextView
                android:id="@+id/my_grade"
                android:textColor="@color/color_9a"
                android:text="信用等级:A"
                android:layout_centerVertical="true"
                style="@style/text_50px" />
            <TextView
                android:id="@+id/my_up_grade"
                android:textColor="@color/white"
                android:text="去提升额度"
                android:background="@color/light_blue"
                android:layout_alignParentBottom="true"
                android:layout_height="85px"
                android:gravity="center"
                android:layout_width="315px"/>
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/my_order_layout"
        android:layout_marginTop="40px"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:background="@color/white"
        android:layout_below="@+id/my_grade_layout"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="150px">
        <TextView
            android:textSize="50px"
            android:text="我的订单"
            android:textColor="@color/common_title_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:background="@color/color_9a"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/my_car_layout"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:background="@color/white"
        android:layout_below="@+id/my_order_layout"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="180px">
        <TextView
            android:drawableLeft="@mipmap/icon_car_order"
            android:drawablePadding="30px"
            android:textSize="50px"
            android:text="车贷订单"
            android:textColor="@color/common_title_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_right_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:background="@color/color_9a"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:id="@+id/my_insurance_layout"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:background="@color/white"
        android:layout_below="@+id/my_car_layout"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="180px">
        <TextView
            android:drawableLeft="@mipmap/icon_insurance_order"
            android:drawablePadding="30px"
            android:textSize="50px"
            android:text="车辆保险订单"
            android:textColor="@color/common_title_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_right_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:background="@color/color_9a"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/my_logout"
            android:text="退出登录"
            android:layout_marginTop="150px"
            style="@style/tv_button" />
    </RelativeLayout>
</LinearLayout>