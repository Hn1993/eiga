<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/light_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/choose_id_image"
        android:background="@mipmap/icon_choose_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/choose_id_image"
        android:layout_marginTop="440px"
        android:id="@+id/choose_id_user"
        android:background="@drawable/button_white_bg_selector"
        android:layout_centerHorizontal="true"
        android:text="我是用户"
        android:textSize="45px"
        android:textColor="@color/common_title_text_color"
        android:gravity="center"
        android:layout_height="110px"
        android:layout_marginLeft="150px"
        android:layout_marginRight="150px"
        android:layout_width="match_parent" />

    <TextView
        android:layout_below="@+id/choose_id_user"
        android:layout_marginTop="80px"
        android:id="@+id/choose_id_sales"
        android:background="@drawable/button_white_bg_selector"
        android:layout_centerHorizontal="true"
        android:text="我是业务员"
        android:textSize="45px"
        android:textColor="@color/light_blue"
        android:gravity="center"
        android:layout_height="110px"
        android:layout_marginLeft="150px"
        android:layout_marginRight="150px"
        android:layout_width="match_parent" />
</RelativeLayout>