<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/base_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_common_title"/>
    <RelativeLayout
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:background="@color/white"
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="200px">
        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/common_title_text_color"
            android:text="头像"
            style="@style/text_45px" />
        <ImageView
            android:id="@+id/fix_head"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_height="120px"
            android:layout_width="120px"/>
    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:background="@color/white"
        android:layout_marginTop="5px"
        android:layout_width="match_parent"
        android:layout_height="150px">
        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/common_title_text_color"
            android:text="昵称"
            style="@style/text_45px" />
        <EditText
            android:id="@+id/fix_et_name"
            android:textSize="45px"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textColor="@color/common_title_text_color"
            android:text="车贷少年"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fix_address_layout"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:background="@color/white"
        android:layout_marginTop="5px"
        android:layout_width="match_parent"
        android:layout_height="180px">
        <TextView
            android:id="@+id/fix_et_jzdz"
            android:layout_centerVertical="true"
            android:textColor="@color/common_title_text_color"
            android:text="居住地址"
            style="@style/text_45px" />
        <EditText
            android:layout_toRightOf="@+id/fix_et_jzdz"
            android:layout_marginLeft="60px"
            android:id="@+id/fix_et_address"
            android:textSize="45px"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textColor="@color/common_title_text_color"
            android:text=""
            android:layout_alignParentRight="true"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/fix_commit"
        android:text="提交修改"
        android:layout_marginTop="150px"
        android:layout_gravity="center_horizontal"
        style="@style/tv_button"/>
</LinearLayout>