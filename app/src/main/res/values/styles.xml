<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/eiga_application</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--字体的样式设计-->
    <style name="text_45px">
        <item name="android:layout_width"> wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:textSize">45px</item>
    </style>

    <style name="text_50px">
        <item name="android:layout_width"> wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:textSize">50px</item>
    </style>

    <style name="text_info_vp">
        <item name="android:layout_width"> wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:textColor"> #3f3f3f </item>
        <item name="android:layout_marginTop">85px</item>
        <item name="android:layout_marginLeft">70px</item>
        <item name="android:drawablePadding">30px</item>
        <item name="android:drawableLeft">@mipmap/v_line</item>
        <item name="android:textSize">45px</item>
    </style>

    <style name="text_info_vp3">
        <item name="android:layout_width"> wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:textColor"> #3f3f3f </item>
        <item name="android:layout_marginTop">30px</item>
        <item name="android:layout_marginLeft">70px</item>
        <item name="android:drawablePadding">30px</item>
        <item name="android:drawableLeft">@mipmap/v_line</item>
        <item name="android:textSize">45px</item>
    </style>

    <style name="vp_tag">
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_marginTop">97px</item>
        <item name="android:layout_marginLeft">70px</item>
    </style>

    <style name="tv_next">
        <item name="android:layout_width"> @dimen/base_button_width </item>
        <item name="android:layout_height"> @dimen/base_button_height  </item>
        <item name="android:textSize">55px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">100px</item>
        <item name="android:layout_marginLeft">70px</item>
    </style>
</resources>
